{
	"extends": "@tsconfig/node24/tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./app",
		"removeComments": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"typeRoots": ["./node_modules/@types", "./app/types"]
	},
	"include": ["app/**/*"],
	"exclude": ["node_modules", "app/**/*.spec.ts"]
}
